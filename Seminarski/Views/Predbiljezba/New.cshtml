@model Seminarski.Models.Predbiljezba
@{

    ViewBag.Title = "Nova prijava";
}
<br />
<p>Molimo unesite osobne podatke za predbilježbu na seminar:</p>
<p>
    <h4><b>@ViewBag.NazivSeminara</b></h4>
</p>
<br />
@using (Html.BeginForm("New", "Predbiljezba"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "Molimo ispravite sljedeće greške")
    <div class="form-group">
        @Html.LabelFor(m => m.Ime)
        @Html.TextBoxFor(m => m.Ime, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Ime)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Prezime)
        @Html.TextBoxFor(m => m.Prezime, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Prezime)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Adresa)
        @Html.TextBoxFor(m => m.Adresa, new { @class = "form-control", placeholder = "npr. 21217, K.Štafilić, Nehajski put 2" })
        @Html.ValidationMessageFor(m => m.Adresa)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Mobitel)
        @Html.TextBoxFor(m => m.Mobitel, new { @class = "form-control", placeholder = "npr. +(385)99-999-999" })
        @Html.ValidationMessageFor(m => m.Mobitel)
    </div>
    @Html.HiddenFor(m => m.SeminarID)
    @Html.HiddenFor(m => m.Datum)
    @Html.HiddenFor(m => m.Status)
    <button type="submit" class="btn btn-primary">Predbilježi se</button>
}
