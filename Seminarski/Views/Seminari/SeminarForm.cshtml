@model Seminarski.Models.Viewmodel.SeminarViewModel
@{
    ViewBag.Title = "Seminar Editor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>@ViewBag.Title</h2>
<br/>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.SeminarID)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Naziv, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })
        
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Opis, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.Opis, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Opis, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Datum, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.Datum, new { htmlAttributes = new { @class = "form-control", placeholder = "npr. 01.01.2020." } })
        @Html.ValidationMessageFor(model => model.Datum, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MaximalniBrojPolaznika, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.MaximalniBrojPolaznika, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.MaximalniBrojPolaznika, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TrenutniBrojPolaznika, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.DisplayFor(model => model.TrenutniBrojPolaznika)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.JePopunjen, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.CheckBoxFor(model => model.JePopunjen, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.JePopunjen, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" style="margin-left: 165px;"/>
    </div>


}